{
  "manifest_version": 3,
  "name": "Test Extension",
  "description": "An extension for testing",
  "version": "1.0.0",
  "permissions": [
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess"
  ],
  "host_permissions": [
    "http://*/",
    "https://*/"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "settings.html",
    "default_icon": "img/icon_16.png"
  },
  "icons": {
    "16": "img/icon_16.png"
  }
}

